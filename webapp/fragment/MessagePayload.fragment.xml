<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog title="Message Payload" stretch="true">
		<content>
			<VBox items="{ path: 'messageProperties>/'}" id="messagePayloadFragment" class="sapUiSmallMarginBeginEnd">
				<VBox class="sapUiSmallMarginTop">
					<items>
						<Label text="{messageProperties>propertyName}" required="{path:'messageProperties>mandatory',formatter:'.mandatoryFormatter'}"/>
						<Select items="{ path: 'hardwareProperties>/HardwareProp/SensorTag'}" width="100%">
							<items>
								<core:Item key="{hardwareProperties>Property}" text="{hardwareProperties>Property}"/>
							</items>
						</Select>
					</items>
				</VBox>
			</VBox>
		</content>
		<buttons>
			<Button text="Done" press="savePayload"/>
			<Button text="Cancel" press="closeDialog"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>