<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="userapp.UserApp.controller.DeviceManager"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page id="devicePage">
				<customHeader>
					<Bar>
						<contentLeft>
							<core:Icon class="iconPadding" src="sap-icon://log" press="onLogout"/>
						</contentLeft>
						<contentMiddle>
							<Title text="{tenant>/tenantname}" />
						</contentMiddle>
						<contentRight>
							<core:Icon class="iconPadding" src="sap-icon://action-settings" press="navSettings"/>
						</contentRight>
					</Bar>
				</customHeader>
				<content>
					<List id="deviceList" items="{ path: 'devices>/', sorter: { path: 'uid' } }">
						<headerToolbar>
							<Toolbar >
								<content>
									<SearchField liveChange="onSearch" width="100%"/>
									<ToolbarSpacer/>
									<Button icon="sap-icon://add" press="navOnboard"/>
								</content>
							</Toolbar>
						</headerToolbar>
						<items>
							<StandardListItem title="{devices>devicename}" description="{devices>uid}" type="Navigation"
								icon="{path:'devices>deviceType',formatter:'.iconFormatter'}" press="navToDetails"/>
						</items>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>