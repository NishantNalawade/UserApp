<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="userapp.UserApp.controller.DeviceManager">
	<App>
		<pages>
			<Page title="{tenant>/tenantname}" id="devicePage" navButtonPress="navToDetails">
				<headerContent>
					<core:Icon class="iconPadding" src="sap-icon://action-settings" press="navSettings"/>
					<core:Icon class="iconPadding" src="sap-icon://log" press="onLogout"/>
				</headerContent>
				<!--<customHeader>-->
