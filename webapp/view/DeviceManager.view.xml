				<!--		</contentRight>-->
				<!--	</Bar>-->
				<!--</customHeader>-->
				<content>
					<List id="deviceList" items="{ path: 'devices>/', sorter: { path: 'uid' } }">
						<headerToolbar>
							<Toolbar>
								<content>
									<SearchField liveChange="onSearch" width="100%"/>
									<ToolbarSpacer/>
									<Button icon="sap-icon://add" press="navOnboard"/>
								</content>
							</Toolbar>
						</headerToolbar>
						<items>
							<StandardListItem title="{devices>deviceid}" description="{devices>uid}" type="Navigation" icon="{path:'devices>deviceType',formatter:'.iconFormatter'}" press="navToDetails"/>
						</items>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>